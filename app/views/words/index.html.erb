<h1>All Words</h1>
<%= form_tag(words_path, method: 'get', multipart:true) do %>
<span>
Category: &nbsp;
<%= select_tag "category_id", options_from_collection_for_select(@categories, "id", "name",:selected => params[:category_id]) %>&nbsp;
<%= radio_button_tag 'learned_filter', 'learned', params[:learned_filter]=='learned' %>&nbsp; Learned
<%= radio_button_tag 'learned_filter', 'not_learned', params[:learned_filter]=='not_learned' %>&nbsp; Not Learned
<%= radio_button_tag 'learned_filter', 'all', params[:learned_filter]=='all'||params[:learned_filter]==nil%> &nbsp;All
&nbsp;


<%= button_tag "Filter"  %>
</span>
<% end %>

<div class="table">
<%= will_paginate %>

<div class="row" style="font-weight: bold; align:center">
<div class="col-xs-6 col-md-4">Japanese</div>                     
<div class="col-md-6">Vietnamese</div>
</div>
<% @words.each do |word| %>
	<div class="col-xs-6 col-md-4"><%= word.name  %></div>                     
	<div class="col-md-6"><%= word.word_values.find_by_correct(true).name %> </div>		 
<% end %>


</ul>

<%= will_paginate %>
</div>

